#!/usr/bin/env php
<?php
// Make sure we don't time out
set_time_limit(0);

require_once(__DIR__ . '/../lib/pecs.php');
require_once(__DIR__ . '/../lib/mochaformatter.php');

// Include the tests
array_shift($argv);
foreach ($argv as $arg) {
	$files = glob($arg);
	foreach ($files as $file) {
		if (preg_match("/.*\.php$/sim", $file)) {
			require_once($file);
		}
	}
}

// Run the tests
\pecs\run(new \pecs\MochaFormatter(array('growl' => true)));
